extends layout
block content
    script(src='/javascripts/jquery-1.11.3.js')
    script(src='/javascripts/post.js')
    div.mainblock
        div.post
            div.posttitle
                h1=post[0].title
            div.date
                h4=post[0].date
            div.body
                p=post[0].body
            div.links
                a(href='/posts') All posts
                a(href='/posts/create?id=' + post[0].id) Updete post
                label.delete(id=post[0].id) Delete post
            div.alert
