extends layout
block content
    script(src='/javascripts/jquery-1.11.3.js')
    script(src='/javascripts/post.js')
    div.mainblock
        each post in posts
            div.post(id=post.id)
                div.category
                    a(href='/posts/category/' + post.category)=post.category
                div.posttitle
                    h1=post.title
                div.date
                    h4=post.date
                div.image
                    image(src=post.image)
                div.short
                    p=post ? post.excerption : ''
                div.links
                    a(href='/posts/' + post.id) Read post
                    a(href='/posts/create?id=' + post.id) Updete post
                    label.delete(id=post.id) Delete post
        div.pagination
            - for (var i = 1; i <= pages_count; i++)
                a(href='/posts/?page='+i)=i
        div.newpost
            a(href='/posts/create') New post